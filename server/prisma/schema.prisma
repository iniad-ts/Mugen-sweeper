datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  createdAt DateTime
}

model Game {
  id         String @id //gameは一つだけどないといけない
  bombMap    Json //number[][]
  userInputs Json //number[][]
}

model Cell {
  x          Int
  y          Int
  isBombCell Boolean
  cellValue  Int
  whoOpened  String //UserId
  whenOpened DateTime

  @@id(fields: [x, y], name: "pos")
}

model Player {
  id     String  @id
  name   String
  x      Int
  y      Int
  score  Int
  isLive Boolean
}
